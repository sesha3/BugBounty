@{
    Layout = "~/Views/Shared/_Layout.Accounts.cshtml";
    ViewBag.Title = "Login | " + "Bug Bounty";
    var isAdfsUserNotFound = TempData["IsAdfsUserNotFound"] as string;
    var callBackUri = ViewBag.CallBackUri;
}

@section styles{
    @Styles.Render("~/Content/accounts")
}

@section scripts{
    <script>
        var callBackUri = "@callBackUri";
        var IsAdfsUserNotFound = '@isAdfsUserNotFound';
        var validateEmailUrl = "@Url.Action("ValidateEmail", "Accounts")";
    </script>
}

@section MainSection{
    <div class="login-wrapper" style="height: auto;width: 348px;font-size: 12px;padding: 24px 32px;text-align: left;">
        <div class="login-body">
            @Html.Partial("_LoginForm")
            <div style="margin-top: 20px;text-align: center;"><a href="https://www.syncfusion.com/account/forgotpassword" target="_blank" class="forgot-pwd-link" tabindex="6">Cannot access your account?</a></div>
        </div>
    </div>
    @Scripts.Render("~/bundles/scripts/accounts/login")
}